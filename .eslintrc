{
  "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
  ],
  "env": {
    "jest": true
  },
  "globals": {
    "document": true
  },
  "rules": {
      "react/jsx-filename-extension": [
        1,
        { "extensions": [
          ".js"
          ]
        }
      ],
      "react/jsx-props-no-spreading": 1,
      "react/no-unescaped-entities": 1,
      "import/prefer-default-export": "off",
      "no-plusplus": [2, { "allowForLoopAfterthoughts": true }]

  },
  "settings": {
    "import/resolver": {
        "node": {
            "moduleDirectory": ["node_modules", "src/"]
        }
    }
  }
}